@{
    ViewData["Title"] = "Kontakti";
}
@model Portfolio.Models.Message
<div class="toast-notification pl-1 pr-1 text-white text-center"><h6 class="pt-3"></h6><p></p></div>
<div id="contact-form">
    <div class="text-center pb-5">
        <h1 class="text-white">Më dërgo email</h1>
    </div>
    <form id="form-body" class="container">
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="@Model.Emri"></label>
                <input class="form-control" asp-for="@Model.Emri">
                <span asp-validation-for="@Model.Emri" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="@Model.Mbiemri"></label>
                <input class="form-control" asp-for="@Model.Mbiemri">
                <span asp-validation-for="@Model.Mbiemri" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="@Model.Gjinia"></label>
                <select class="form-control" asp-for="@Model.Gjinia">
                    <option value="Mr.">Mr.</option>
                    <option value="Mrs.">Mrs.</option>
                    <option value="Miss.">Miss.</option>
                </select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="@Model.Email"></label>
                <input class="form-control" asp-for="@Model.Email">
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="@Model.Telefoni"></label>
                <input class="form-control" asp-for="@Model.Telefoni">
                <span asp-validation-for="@Model.Telefoni" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="@Model.Komentet"></label>
                <textarea class="form-control" asp-for="@Model.Komentet" rows="3"></textarea>
            </div>
        </div>
        <div class="text-center">
            <button class="g-recaptcha btn btn-primary"
                    data-sitekey="6Le2Xq0ZAAAAAB_9Vspgd7ZqSpzXl1A1XumaZoBp"
                    data-callback='onSubmit'
                    data-action='submit'>
                Konfirmo
            </button>
        </div>
    </form>
</div>
<div class="text-center" id="second-Page">
    <div class="container vertical-middle pt-v-sm-20vh">
        <h1 class="pb-5 text-white">Më kontaktoni përmes</h1>
        <div class="row">
            <div class="col-sm-10 offset-sm-1 offset-md-0 col-md-4 mb-4">
                <div class="card bg-none">
                    <span class="material-icons card-img-top pt-4 font-88px text-wheat">email</span>
                    <div class="card-body">
                        <h5 class="card-title text-white">Email</h5>
                        <a class="card-text" href="mailto:erasej10@gmail.com">erasej10@gmail.com</a>

                    </div>
                </div>
            </div>
            <div class="col-sm-10 offset-sm-1 offset-md-0 col-md-4 mb-4">
                <div class="card bg-none">
                    <span class="material-icons card-img-top pt-4 font-88px text-wheat">call</span>
                    <div class="card-body">
                        <h5 class="card-title text-white">Telefoni</h5>
                        <a class="card-text" href="tel:+38348181820">+38348181820</a>
                    </div>
                </div>
            </div>
            <div class="col-sm-10 offset-sm-1 offset-md-0 col-md-4 mb-4">
                <div class="card bg-none">
                    <span class="material-icons card-img-top pt-4 font-88px text-wheat">location_city</span>
                    <div class="card-body">
                        <h5 class="card-title text-white">Lokacioni</h5>
                        <p class="card-text">Miran Hajra , Mitrovicë, Kosov</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://www.google.com/recaptcha/api.js"></script>
